/**index.wxss**/
/* 首页顶部公共样式 */
.header {
    position: fixed;
    top: -1px;
    left: 0;
    right: 0;
    z-index: 99;
    box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.2);
    background: #f2f2f2;
}

.search {
    height: 87.5rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.search view {
    width: calc(100% - 200rpx);
    background: #fff;
    height: 66.5rpx;
    border: 2rpx solid #e5e5e5;
    border-radius: 4rpx;
}

.search icon {
    padding-left: 15rpx;
}

.search input {
    width: calc(100% - 70rpx);
    display: inline-block;
    float: right;
    margin-top: 6rpx;
    font-size: 30rpx;
    color: #333;
}

.logo {
    width: 50rpx;
    height: 32.88rpx;
    padding: 0 27rpx;
}

.user {
    width: 42rpx;
    height: 42rpx;
    padding: 0 27rpx;
}

.nav {
    height: 60rpx;
    white-space: nowrap;
    padding-right: 60rpx;
}

.list view {
    display: inline-block;
    color: rgb(116, 116, 116);
    font-size: 28rpx;
    margin: 0 25rpx;
    vertical-align: top;
    line-height: 56rpx;
}

.list .act {
    border-bottom: 4rpx solid rgb(237, 91, 0);
}

.navBg {
    position: fixed;
    width: 100%;
    top: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 90;
}

.navList {
    width: 100%;
    height: 0;
    position: fixed;
    background: #f2f2f2;
    z-index: 100;
    margin-top: -60rpx;
    overflow: hidden;
}

.slidedown {
    animation: slidedown 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes slidedown {
    from {
        height: 0;
    }

    to {
        height: 250rpx;
    }
}

.slideup {
    animation: slideup 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes slideup {
    from {
        height: 250rpx;
    }

    to {
        height: 0;
    }
}

.isdown {
    animation: isdown 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes isdown {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(180deg);
    }
}

.isup {
    animation: isup 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes isup {
    from {
        transform: rotate(180deg);
    }

    to {
        transform: rotate(0deg);
    }
}

.navListTit {
    font-size: 30rpx;
    padding: 10rpx 27rpx;
}

.navListCon {
    padding: 10rpx 27rpx 0 0;
    font-size: 28rpx;
}

.navListCon text {
    border: 2rpx solid #e5e5e5;
    border-radius: 8rpx;
    display: inline-block;
    width: 150rpx;
    line-height: 54rpx;
    text-align: center;
    margin-left: 27rpx;
    margin-bottom: 27rpx;
}

.navListCon .act {
    background-color: #fde0d5;
    border-color: #ff6700;
    color: #ff6700;
}

.arrow {
    width: 40rpx;
    height: 40rpx;
    padding: 0 10rpx;
    position: fixed;
    z-index: 110;
    right: 10rpx;
    margin-top: -50rpx;
    background: #f2f2f2;
}
/* 首页body滚动公共样式 */
.body {
    margin-top: 146rpx;
    position: absolute;
    display: none;
    background: #fff;
}

.bodyAct{
    display: block;
}

.bodyToLeft {
    display: block;
    animation: toLeft 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes toLeft {
    from {
        left: 0;
    }

    to {
        left: -100%;
    }
}

.bodyFromLeft {
    display: block;
    animation: fromLeft 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes fromLeft {
    from {
        left: -100%;
    }

    to {
        left: 0;
    }
}

.bodyToRight {
    display: block;
    animation: toRight 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes toRight {
    from {
        left: 0;
    }

    to {
        left: 100%;
    }
}

.bodyFromRight {
    display: block;
    animation: fromRight 0.3s linear;
    animation-fill-mode: forwards;
}

@keyframes fromRight {
    from {
        left: 100%;
    }

    to {
        left: 0;
    }
}
